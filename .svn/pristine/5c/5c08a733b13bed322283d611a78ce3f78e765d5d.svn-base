function base64ToFile(base64, fileName) {
  let arr = base64.split(",");
  let mime = arr[0].split(";base64")[0].split('/')[1];
  let bstr = atob(arr[1]);
  let n = bstr.length;
  let u8arr = new Uint8Array(n);

  while (n--) {
    u8arr[n] = bstr.charCodeAt(n);
  }
  return new File([u8arr], fileName, {type: mime});
}

